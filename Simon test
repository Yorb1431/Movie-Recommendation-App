from flask import Flask, render_template, request

app = Flask(__name__)

movies = [
    {"title": "Inception", "genre": "Sci-Fi"},
    {"title": "The Dark Knight", "genre": "Action"},
    {"title": "Interstellar", "genre": "Sci-Fi"},
    {"title": "Titanic", "genre": "Romance"},
    {"title": "Gladiator", "genre": "Action"},
]

@app.route('/', methods=['GET', 'POST'])
def home():
    selected_genre = None
    recommended_movies = []
    
    if request.method == 'POST':
        selected_genre = request.form.get('genre')
        recommended_movies = [m for m in movies if m['genre'] == selected_genre]
    
    genres = list(set(m['genre'] for m in movies))
    return render_template('index.html', genres=genres, selected_genre=selected_genre, recommended_movies=recommended_movies)

if __name__ == '__main__':
    app.run(debug=True)
    